 <ul class="flex justify-between items-center p-4 bg-primary">
        <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link bg-primary' %></li>
        <h2><strong class="text-white h-2"><%= @category.name %></strong></h2>
        <li><h2><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-white" %></h2></li>
      </ul>

    <div class="container">
    <p style="color: green"><%= notice %></p>

    <%= render @category %>
    <div class="container-fluid">
      
        <% @records.each do |record| %>
          <a href="<%= category_record_path(@category, record) %>" class="m-1">
          <%= render "records/record", record: record %>
          </a>
        <% end %>
      
    </div>
 

  <div class="flex flex-col space-y-2 mt-5">
      <a href="<%= new_category_record_path(@category) %>" class="">
        <button data-testid="new-record-button" class="btn btn-primary container">
          New record
        </button>
      </a>

      <%= link_to edit_category_path(@category) do %>
        <button data-testid="edit-category-button" class="btn btn-primary container">Edit category</button>
      <% end %>
      <%= button_to "Delete category", @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary container" %>
    </div>
  </div>