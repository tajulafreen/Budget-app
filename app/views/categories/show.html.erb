 <ul class="flex justify-between items-center p-4 bg-primary">
        <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link bg-primary' %></li>
        <h2><strong class="text-white h-2"><%= @category.name %></strong></h2>
        <li><h2><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-white" %></h2></li>
      </ul>

    <div class="container">
    <p style="color: green"><%= notice %></p>

    <%= render @category %>
    <div class="container-fluid">
      
        <% @records.each do |record| %>
          <a href="<%= category_record_path(@category, record) %>" class="m-1">
          <%= render "records/record", record: record %>
          </a>
        <% end %>
      
    </div>
 

  <div class="d-flex justify-content-between space-y-2 mt-3">
      
      <div class="mt-2 ">
      <%= link_to edit_category_path(@category) do %>
        <button data-testid="edit-category-button" class="btn btn-primary w-32">Edit category</button>
      <% end %>
      </div>
      <div>
      <%= button_to "Delete category", @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
     </div>
    </div>
  </div>
<footer class="container-fluid  mt-3 p-1", style="background-color: rgb(100, 182, 37);height:80px; position: fixed; bottom: 0">
<div class=" border border-cyan-50 m-2 p-2" style="height:50px; margin-left:30px; margin-right:30px; display: flex; justify-content: center">
<a href="<%= new_category_record_path(@category) %>" >
        <button data-testid="new-record-button" class="btn text-white container text-center", style="background-color: rgb(100, 182, 37);">
         
          New record
          
        </button>
      </a>
      </div>
</footer>